/**
* Access callback for user_address entities.
*/
function user_address_access($op, $user_address, $account = NULL) {
  global $user;

  if (!isset($account)) {
    $account = $user;
  }
  switch ($op) {
    case 'create':
      return user_access('administer example_task entities', $account)
          || user_access('edit own user_address entities', $account);
    case 'view':
      return user_access('administer user_address entities', $account)
          || user_access('view any user_address entities', $account)
          || (user_access('view own user_address entities') && ($user_address->uid == $account->uid));
    case 'edit':
      return user_access('administer user_address entities')
          || user_access('edit any user_address entities')
          || (user_access('edit own user_address entities') && ($user_address->uid == $account->uid));
  }
}

